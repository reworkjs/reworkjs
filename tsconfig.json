{
  "compilerOptions": {
    "noEmit": true,
    "declaration": false,
    "module": "ESNext",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "sourceMap": false,
    "lib": ["es2021", "dom", "dom.iterable"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
